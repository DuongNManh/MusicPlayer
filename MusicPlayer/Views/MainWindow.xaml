<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        Background="#FF282828">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Margin"
                    Value="5"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background"
                    Value="#FF282828"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="14"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding"
                    Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                                <Setter Property="Foreground"
                                        Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Menu">
            <Setter Property="Background"
                    Value="#FF121212"/>
            <Setter Property="Foreground"
                    Value="White"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background"
                    Value="#FF121212"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="10,5">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF282828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="Slider.DecreaseLarge">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="#FF606060"
                                                            Height="4"/>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="Slider.IncreaseLarge">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="#FF404040"
                                                            Height="4"/>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Fill="White"
                                                             Width="12"
                                                             Height="12"/>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding"
                    Value="10,8"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                                <Setter Property="Cursor"
                                        Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="PlayingHighlightBrush"
                         Color="#1DB954"/>
        <!-- Spotify-like green color -->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header/Search -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Player Controls -->
        </Grid.RowDefinitions>

        <!-- Header with Search -->
        <Grid Grid.Row="0"
              Background="#FF282828">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="←"
                    FontSize="16"
                    Margin="10,5"
                    Width="30"
                    Height="30"/>

            <TextBox Grid.Column="1"
                     Margin="10,10,20,10"
                     Background="#FF383838"
                     Foreground="White"
                     Padding="8,5"
                     BorderThickness="0"
                     TextChanged="TextBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Resources>
                            <VisualBrush x:Key="SearchHint"
                                         TileMode="None"
                                         Opacity="0.5"
                                         Stretch="None"
                                         AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Search"
                                               Foreground="#FFB3B3B3"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text"
                                     Value="">
                                <Setter Property="Background"
                                        Value="{StaticResource SearchHint}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Grid Grid.Column="0"
                  Background="#FF181818">
                <StackPanel>
                    <!-- File Management Section -->
                    <Button Content="Add Files"
                            Click="AddFiles_Click"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"/>

                    <Button Content="Add Folder"
                            Click="AddFolder_Click"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"/>

                    <Separator Margin="10,10"
                               Background="#FF383838"/>

                    <!-- View Options -->
                    <Button Content="Songs"
                            Click="ViewSongs_Click"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"/>

                    <Button Content="Artists"
                            Click="ViewArtists_Click"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"/>

                    <Button Content="Albums"
                            Click="ViewAlbums_Click"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"/>

                    <Separator Margin="10,10"
                               Background="#FF383838"/>

                    <!-- Playlists Section -->
                    <Button Content="Playlists"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"/>

                    <!-- Settings at the bottom -->
                    <Button Content="Settings"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"
                            VerticalAlignment="Bottom"/>
                </StackPanel>
            </Grid>

            <!-- Content Area - Keep your existing Views here -->
            <Grid Grid.Column="1"
                  Margin="10">
                <!-- Hidden PlaylistBox for maintaining functionality -->
                <ListBox x:Name="PlaylistBox"
                         SelectionChanged="PlaylistBox_SelectionChanged"
                         Visibility="Collapsed"/>

                <!-- Songs View -->
                <ListView x:Name="SongListView"
                          Background="Transparent"
                          BorderThickness="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter Property="Padding"
                                    Value="10,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}"
                                                BorderThickness="0">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                    Value="True">
                                                <Setter Property="Background"
                                                        Value="#FF383838"/>
                                                <Setter Property="Cursor"
                                                        Value="Hand"/>
                                            </Trigger>
                                            <Trigger Property="ItemsControl.AlternationIndex"
                                                    Value="0">
                                                <Setter Property="Background"
                                                        Value="#FF1E1E1E"/>
                                            </Trigger>
                                            <Trigger Property="ItemsControl.AlternationIndex"
                                                    Value="1">
                                                <Setter Property="Background"
                                                        Value="#FF282828"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <!-- Add this property to enable alternating rows -->
                    <ListView.AlternationCount>2</ListView.AlternationCount>

                    <!-- Keep your existing ItemTemplate -->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid MouseLeftButtonUp="SongListItem_Click"
                                  Height="60">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding AlbumArt}"
                                       Width="50"
                                       Height="50"/>
                                <TextBlock Text="{Binding Title}"
                                           Grid.Column="1"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground"
                                                    Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPlaying}"
                                                             Value="True">
                                                    <Setter Property="Foreground"
                                                            Value="{StaticResource PlayingHighlightBrush}"/>
                                                    <Setter Property="FontWeight"
                                                            Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding Artist}"
                                           Grid.Column="2"
                                           Foreground="White"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Duration}"
                                           Grid.Column="3"
                                           Foreground="White"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Keep your existing AlbumsView -->
                <ListView x:Name="AlbumsView"
                          Visibility="Collapsed"
                          Background="Transparent"
                          BorderThickness="0">
                    <!-- Keep your existing ItemTemplate -->
                </ListView>

                <!-- Keep your existing ArtistsView -->
                <ListView x:Name="ArtistsView"
                          Visibility="Collapsed"
                          Background="Transparent"
                          BorderThickness="0">
                    <!-- Keep your existing ItemTemplate -->
                </ListView>

                <!-- Song Detail View -->
                <Grid x:Name="SongDetailView"
                      Visibility="Collapsed">
                    <StackPanel>
                        <Button Content="Back to Library"
                                Click="BackToLibrary_Click"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20"/>
                        <Image x:Name="DetailAlbumArtImage"
                               Width="300"
                               Height="300"
                               Margin="0,0,0,20"/>
                        <TextBlock x:Name="DetailTitleText"
                                   FontSize="24"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="DetailArtistText"
                                   FontSize="18"
                                   Foreground="#FFB3B3B3"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="DetailAlbumText"
                                   FontSize="16"
                                   Foreground="#FFB3B3B3"/>
                        <Image x:Name="DetailArtistImage"
                               Width="200"
                               Height="200"
                               Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Playback Controls -->
        <Grid Grid.Row="2"
              Background="#FF181818"
              Height="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Progress Bar -->
            <Grid Grid.Row="0"
                  Margin="10,5">
                <TextBlock x:Name="CurrentTimeText"
                           Text="00:00"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <Slider x:Name="ProgressSlider"
                        Margin="40,0"
                        Thumb.DragStarted="ProgressSlider_DragStarted"
                        Thumb.DragCompleted="ProgressSlider_DragCompleted"/>

                <TextBlock x:Name="TotalTimeText"
                           Text="00:00"
                           Foreground="#FFB3B3B3"
                           HorizontalAlignment="Right"/>
            </Grid>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10">
                <Button x:Name="PreviousButton"
                        Content="⏮"
                        FontSize="20"
                        Width="40"
                        Height="40"
                        Margin="5"
                        Click="PreviousButton_Click"/>

                <Button x:Name="PlayButton"
                        Content="▶"
                        FontSize="24"
                        Width="45"
                        Height="45"
                        Margin="8"
                        Click="PlayButton_Click"/>

                <Button x:Name="NextButton"
                        Content="⏭"
                        FontSize="20"
                        Width="40"
                        Height="40"
                        Margin="5"
                        Click="NextButton_Click"/>

                <!-- Volume Control -->
                <StackPanel Orientation="Horizontal"
                            Margin="40,0,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="🔊"
                               Foreground="White"
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <Slider x:Name="VolumeSlider"
                            Width="120"
                            Maximum="1"
                            Value="0.5"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
