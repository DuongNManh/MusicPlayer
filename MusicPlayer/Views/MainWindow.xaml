<Window x:Class="MusicPlayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer.Views"
        xmlns:converters="clr-namespace:MusicPlayer.Converters"
        mc:Ignorable="d"
        Title="Music Player"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        Background="#FF282828">
    <Window.Resources>
        <converters:InverseVisibilityConverter x:Key="InverseVisibilityConverter"/>
        <converters:VisibilityToWidthConverter x:Key="WidthConverter"/>
        <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>

        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Margin"
                    Value="5"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background"
                    Value="#FF282828"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="14"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding"
                    Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                                <Setter Property="Foreground"
                                        Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Menu">
            <Setter Property="Background"
                    Value="#FF121212"/>
            <Setter Property="Foreground"
                    Value="White"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background"
                    Value="#FF121212"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="10,5">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF282828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="Slider.DecreaseLarge">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="#FF606060"
                                                            Height="4"/>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="Slider.IncreaseLarge">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="#FF404040"
                                                            Height="4"/>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Fill="White"
                                                             Width="12"
                                                             Height="12"/>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll"
                    Value="True"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing"
                    Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode"
                    Value="Recycling"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Padding="{TemplateBinding Padding}"
                                          Focusable="False">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding"
                    Value="10,8"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                                <Setter Property="Cursor"
                                        Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="PlayingHighlightBrush"
                         Color="#1DB954"/>
        <!-- Spotify-like green color -->

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Scrollbar Style -->
        <Style x:Key="ModernScrollBarThumb"
               TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="#FFB3B3B3"
                                   RadiusX="4"
                                   RadiusY="4"
                                   Width="8"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Width"
                    Value="8"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Rectangle Fill="Transparent"
                                       Width="8"/>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ModernScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="False">
                                <Setter TargetName="PART_Track"
                                        Property="Opacity"
                                        Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TransparentButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#22FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FadeTransitionStyle"
               TargetType="FrameworkElement">
            <Style.Triggers>
                <Trigger Property="Visibility"
                         Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0.0"
                                                 To="1.0"
                                                 Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header/Search -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="90"/>
            <!-- Now Playing Bar -->
        </Grid.RowDefinitions>

        <!-- Header with Search -->
        <Grid Grid.Row="0"
              Background="#FF181818">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="←"
                    FontSize="16"
                    Margin="10,5"
                    Click="BackToLibrary_Click"
                    Style="{StaticResource TransparentButton}"
                    HorizontalAlignment="Left"
                    Width="30"
                    Height="30"/>

            <TextBox Grid.Column="1"
                     Margin="380,10,380,10"
                     Background="#FF383838"
                     Foreground="White"
                     Padding="8,5"
                     BorderThickness="0"
                     TextChanged="TextBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Resources>
                            <VisualBrush x:Key="SearchHint"
                                         TileMode="None"
                                         Opacity="0.5"
                                         Stretch="None"
                                         AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Search"
                                               Foreground="White"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text"
                                     Value="">
                                <Setter Property="Background"
                                        Value="{StaticResource SearchHint}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Grid>

        <!-- Main Content Area with Background -->
        <Grid Grid.Row="1"
              Grid.RowSpan="2">
            <!-- Background for entire content area -->
            <Image x:Name="MainBackgroundImage"
                   Stretch="UniformToFill">
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <Trigger Property="Source"
                                     Value="{x:Null}">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                            <Trigger Property="Source"
                                     Value="{x:Null}">
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0.3"
                                                             Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
                <Image.Effect>
                    <BlurEffect Radius="50"/>
                </Image.Effect>
            </Image>

            <!-- Main Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Make navigation column collapsible -->
                    <ColumnDefinition x:Name="NavColumn"
                                      Width="{Binding ElementName=SongDetailView, Path=Visibility, Converter={StaticResource WidthConverter}}"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation Panel -->
                <Grid Grid.Column="0"
                      Background="#FF181818"
                      Visibility="{Binding ElementName=SongDetailView, Path=Visibility, Converter={StaticResource InverseVisibilityConverter}}"
                      Margin="0,5,0,95">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <Trigger Property="Visibility"
                                         Value="Visible">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                    From="-200,5,0,95"
                                                                    To="0,5,0,95"
                                                                    Duration="0:0:0.3">
                                                    <ThicknessAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </ThicknessAnimation.EasingFunction>
                                                </ThicknessAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <StackPanel>
                        <!-- File Management Section -->
                        <Button Content="Add Files"
                                Click="AddFiles_Click"
                                HorizontalContentAlignment="Left"
                                Padding="20,12"
                                Margin="0,5"/>

                        <Button Content="Add Folder"
                                Click="AddFolder_Click"
                                HorizontalContentAlignment="Left"
                                Padding="20,12"
                                Margin="0,5"/>

                        <Separator Margin="10,10"
                                   Background="#FF383838"/>

                        <!-- View Options -->
                        <Button Content="Songs"
                                Click="ViewSongs_Click"
                                HorizontalContentAlignment="Left"
                                Padding="20,12"
                                Margin="0,5"/>

                        <Button Content="Artists"
                                Click="ViewArtists_Click"
                                HorizontalContentAlignment="Left"
                                Padding="20,12"
                                Margin="0,5"/>

                        <Button Content="Albums"
                                Click="ViewAlbums_Click"
                                HorizontalContentAlignment="Left"
                                Padding="20,12"
                                Margin="0,5"/>

                        <Separator Margin="10,10"
                                   Background="#FF383838"/>

                        <!-- Playlists Section -->
                        <Button Content="Playlists"
                                HorizontalContentAlignment="Left"
                                Padding="20,12"
                                Margin="0,5"/>

                        <!-- Settings at the bottom -->
                        <Button Content="Settings"
                                HorizontalContentAlignment="Left"
                                Padding="20,12"
                                Margin="0,5"
                                VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Grid>

                <!-- Content Area -->
                <Grid Grid.Column="1">
                    <!-- Hidden PlaylistBox for maintaining functionality -->
                    <ListBox x:Name="PlaylistBox"
                             SelectionChanged="PlaylistBox_SelectionChanged"
                             Visibility="Collapsed"/>

                    <!-- Songs View -->
                    <ListView x:Name="SongListView"
                              Style="{StaticResource FadeTransitionStyle}"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background"
                                        Value="Transparent"/>
                                <Setter Property="Padding"
                                        Value="10,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    BorderThickness="0">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#8c8c8c"/>
                                                    <Setter Property="Cursor"
                                                            Value="Hand"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <!-- Add this property to enable alternating rows -->
                        <ListView.AlternationCount>2</ListView.AlternationCount>

                        <!-- Keep your existing ItemTemplate -->
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid MouseLeftButtonUp="SongListItem_Click"
                                      Height="60">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="{Binding AlbumArt}"
                                           Width="50"
                                           Height="50"/>
                                    <TextBlock Text="{Binding Title}"
                                               Grid.Column="1"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="White"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPlaying}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="{StaticResource PlayingHighlightBrush}"/>
                                                        <Setter Property="FontWeight"
                                                                Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Artist}"
                                               Grid.Column="2"
                                               Foreground="White"
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Duration}"
                                               Grid.Column="3"
                                               Foreground="White"
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Albums View -->
                    <ListView x:Name="AlbumsView"
                              Style="{StaticResource FadeTransitionStyle}"
                              Visibility="Collapsed"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="200"
                                      Height="280"
                                      Margin="10"
                                      MouseLeftButtonUp="AlbumItem_Click">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0"
                                            CornerRadius="8">
                                        <Image Source="{Binding AlbumArt}"
                                               Width="200"
                                               Height="200"
                                               Stretch="UniformToFill">
                                            <Image.Effect>
                                                <DropShadowEffect BlurRadius="10"
                                                                  ShadowDepth="5"
                                                                  Opacity="0.3"/>
                                            </Image.Effect>
                                        </Image>
                                    </Border>

                                    <StackPanel Grid.Row="1"
                                                Margin="0,10,0,0">
                                        <TextBlock Text="{Binding Title}"
                                                   Foreground="White"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Artist}"
                                                   Foreground="#FFB3B3B3"
                                                   FontSize="14"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding SongCount, StringFormat={}{0} songs}"
                                                   Foreground="#FFB3B3B3"
                                                   FontSize="12"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Artists View -->
                    <ListView x:Name="ArtistsView"
                              Style="{StaticResource FadeTransitionStyle}"
                              Visibility="Collapsed"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="180"
                                      Height="240"
                                      Margin="10"
                                      MouseLeftButtonUp="ArtistItem_Click">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0"
                                            CornerRadius="90">
                                        <Ellipse Width="180"
                                                 Height="180">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding ArtistImage}"
                                                            Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                            <Ellipse.Effect>
                                                <DropShadowEffect BlurRadius="10"
                                                                  ShadowDepth="5"
                                                                  Opacity="0.3"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Border>

                                    <StackPanel Grid.Row="1"
                                                Margin="0,10,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="White"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   TextAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding SongCount, StringFormat={}{0} songs}"
                                                   Foreground="#FFB3B3B3"
                                                   FontSize="12"
                                                   TextAlignment="Center"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Song Detail View -->
                    <Grid x:Name="SongDetailView"
                          Style="{StaticResource FadeTransitionStyle}"
                          Visibility="Collapsed"
                          Background="#FF121212">
                        <!-- Single background for entire detail view -->
                        <Image x:Name="DetailBackgroundImage"
                               Stretch="UniformToFill"
                               Opacity="0.3">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="DetailBackgroundScale"
                                                    ScaleX="1.1"
                                                    ScaleY="1.1"/>
                                    <TranslateTransform x:Name="DetailBackgroundTranslate"
                                                        X="0"
                                                        Y="0"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                            <Image.Triggers>
                                <EventTrigger RoutedEvent="Image.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <!-- Slow zoom animation -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="DetailBackgroundScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="1.1"
                                                    To="1.2"
                                                Duration="0:0:30"
                                                AutoReverse="True"/>
                                            <DoubleAnimation
                                                Storyboard.TargetName="DetailBackgroundScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="1.1"
                                                    To="1.2"
                                                Duration="0:0:30"
                                                AutoReverse="True"/>

                                            <!-- Slow pan animation -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="DetailBackgroundTranslate"
                                                Storyboard.TargetProperty="X"
                                                From="0"
                                                    To="-50"
                                                Duration="0:0:40"
                                                AutoReverse="True"/>
                                            <DoubleAnimation
                                                Storyboard.TargetName="DetailBackgroundTranslate"
                                                Storyboard.TargetProperty="Y"
                                                From="0"
                                                    To="-30"
                                                Duration="0:0:35"
                                                AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Image.Triggers>
                            <Image.Effect>
                                <BlurEffect Radius="30"/>
                            </Image.Effect>
                        </Image>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="200"/>
                                <RowDefinition Height="90"/>
                            </Grid.RowDefinitions>

                            <!-- Main Content Section -->
                            <Grid Grid.Row="0"
                                  Margin="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Side: Album Art -->
                                <Border Grid.Column="0"
                                        CornerRadius="8"
                                        Padding="2">
                                    <Image x:Name="DetailAlbumArtImage"
                                           Width="350"
                                           Height="350"
                                           VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality">
                                        <Image.Effect>
                                            <DropShadowEffect BlurRadius="15"
                                                              ShadowDepth="5"
                                                              Opacity="0.5"/>
                                        </Image.Effect>
                                    </Image>
                                </Border>

                                <!-- Middle: Song Info -->
                                <StackPanel Grid.Column="1"
                                            Margin="40,0"
                                            VerticalAlignment="Center">
                                    <Border CornerRadius="8"
                                            Padding="20">
                                        <StackPanel>
                                            <TextBlock x:Name="DetailTitleText"
                                                       FontSize="42"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,15"
                                                       Effect="{x:Null}"/>

                                            <TextBlock x:Name="DetailArtistText"
                                                       FontSize="24"
                                                       Foreground="#FFB3B3B3"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,10"
                                                       Effect="{x:Null}"/>

                                            <TextBlock x:Name="DetailAlbumText"
                                                       FontSize="18"
                                                       Foreground="#FFB3B3B3"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,20"
                                                       Effect="{x:Null}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Right Side: Artist Image -->
                                <Border Grid.Column="2"
                                        CornerRadius="175"
                                        Padding="2"
                                        VerticalAlignment="Center">
                                    <Grid>
                                        <Ellipse Width="350"
                                                 Height="350">
                                            <Ellipse.Fill>
                                                <ImageBrush x:Name="DetailArtistImageBrush"
                                                            ImageSource="{Binding ElementName=DetailArtistImage, Path=Source}"
                                                            Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Image x:Name="DetailArtistImage"
                                               Width="350"
                                               Height="350"
                                               Visibility="Hidden"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Visualization Section -->
                            <Grid Grid.Row="1">

                                <Canvas x:Name="VisualizationCanvas"
                                        Height="150"
                                        VerticalAlignment="Bottom"
                                        Margin="30,30,30,20"
                                        ClipToBounds="True"/>
                            </Grid>

                            <!-- Empty row for Now Playing bar spacing -->
                            <Grid Grid.Row="2"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Now Playing Bar with transparency -->
        <Grid Grid.Row="2"
              Background="#66000000"
              Height="90">
            <Grid.Effect>
                <BlurEffect Radius="1"/>
            </Grid.Effect>

            <!-- Existing Now Playing content with adjusted transparency -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Song Info with increased transparency -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="24,0"
                            MouseLeftButtonUp="NowPlaying_Click"
                            Cursor="Hand">
                    <Image x:Name="NowPlayingImage"
                           Width="60"
                           Height="60"
                           Margin="0,0,20,0"
                           Visibility="{Binding ElementName=SongDetailView, Path=Visibility, Converter={StaticResource InverseVisibilityConverter}}">
                        <Image.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="2"
                                              Opacity="0.3"/>
                        </Image.Effect>
                    </Image>
                    <StackPanel VerticalAlignment="Center"
                                Margin="0,0,20,0">
                        <TextBlock x:Name="NowPlayingTitle"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="NowPlayingArtist"
                                   Foreground="#FFB3B3B3"
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Center Controls with subtle background -->
                <Grid Grid.Column="1"
                      Margin="10,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress Bar -->
                    <Grid Grid.Row="0"
                          Margin="16,0,16,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="CurrentTimeText"
                                   Grid.Column="0"
                                   Text="00:00"
                                   Foreground="#FFB3B3B3"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <Slider x:Name="ProgressSlider"
                                Grid.Column="1"
                                Margin="0,0"
                                VerticalAlignment="Center"
                                Thumb.DragStarted="ProgressSlider_DragStarted"
                                Thumb.DragCompleted="ProgressSlider_DragCompleted"/>
                        <TextBlock x:Name="TotalTimeText"
                                   Grid.Column="2"
                                   Text="00:00"
                                   Foreground="#FFB3B3B3"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </Grid>

                    <!-- Playback Controls -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,8">
                        <Button x:Name="ShuffleButton"
                                Content="🔀"
                                FontSize="20"
                                Width="40"
                                Height="40"
                                Margin="0,0,12,0"
                                Click="ShuffleButton_Click"
                                Background="{Binding IsShuffleEnabled, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToBackgroundConverter}}"/>
                        <Button x:Name="PreviousButton"
                                Content="⏮"
                                FontSize="20"
                                Width="40"
                                Height="40"
                                Margin="0,0,12,0"
                                Click="PreviousButton_Click"/>
                        <Button x:Name="PlayButton"
                                Content="▶"
                                FontSize="24"
                                Width="45"
                                Height="45"
                                Margin="0,0,12,0"
                                Click="PlayButton_Click"/>
                        <Button x:Name="NextButton"
                                Content="⏭"
                                FontSize="20"
                                Width="40"
                                Height="40"
                                Margin="0,0,12,0"
                                Click="NextButton_Click"/>
                        <Button x:Name="RepeatButton"
                                Content="🔁"
                                FontSize="20"
                                Width="40"
                                Height="40"
                                Click="RepeatButton_Click"
                                Background="{Binding IsRepeatEnabled, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToBackgroundConverter}}"/>
                    </StackPanel>
                </Grid>

                <!-- Volume Control with subtle background -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Margin="24,0">
                    <TextBlock Text="🔊"
                               Foreground="White"
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <Slider x:Name="VolumeSlider"
                            Width="120"
                            Maximum="1"
                            Value="0.5"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Add a trigger to update background when showing song details -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="MainBackgroundImage"
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="0.3"
                            Duration="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>
