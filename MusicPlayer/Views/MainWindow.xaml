<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        Background="#FF121212">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="#FF282828"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background"
                    Value="#FF282828"/>
            <Setter Property="Foreground"
                    Value="#FFB3B3B3"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="0"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding"
                    Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                                <Setter Property="Foreground"
                                        Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Menu">
            <Setter Property="Background"
                    Value="#FF121212"/>
            <Setter Property="Foreground"
                    Value="White"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background"
                    Value="#FF121212"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="10,5">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF282828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="Slider.DecreaseLarge">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="#FF606060"
                                                            Height="4"/>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="Slider.IncreaseLarge">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="#FF404040"
                                                            Height="4"/>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Fill="White"
                                                             Width="12"
                                                             Height="12"/>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding"
                    Value="10,8"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF383838"/>
                                <Setter Property="Cursor"
                                        Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Player Controls -->
        </Grid.RowDefinitions>

        <!-- Header with Navigation -->
        <Grid Grid.Row="0"
              Background="#FF181818">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="10">
                <Button Content="Add Files"
                        Click="AddFiles_Click"
                        Margin="0,0,10,0"/>
                <Button Content="Add Folder"
                        Click="AddFolder_Click"/>
            </StackPanel>

            <!-- Search Box -->
            <TextBox Grid.Column="1"
                     Margin="10"
                     VerticalAlignment="Center"
                     Background="#FF282828"
                     Foreground="White"
                     Padding="5"/>

            <!-- View Selection buttons -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Margin="10">
                <Button Content="Songs"
                        Click="ViewSongs_Click"
                        Margin="5,0"/>
                <Button Content="Albums"
                        Click="ViewAlbums_Click"
                        Margin="5,0"/>
                <Button Content="Artists"
                        Click="ViewArtists_Click"
                        Margin="5,0"/>
            </StackPanel>

            <!-- Menu -->
            <Menu Grid.Column="2"
                  Background="Transparent"
                  Margin="10">
                <MenuItem Header="⚙️"
                          Background="Transparent">
                    <MenuItem Header="Add Files"
                              Click="AddFiles_Click"/>
                    <MenuItem Header="Add Folder"
                              Click="AddFolder_Click"/>
                    <Separator/>
                    <MenuItem x:Name="ShuffleMenuItem"
                              Header="Shuffle"
                              IsCheckable="True"
                              Click="ShuffleMenuItem_Click"/>
                    <MenuItem x:Name="RepeatMenuItem"
                              Header="Repeat"
                              IsCheckable="True"
                              Click="RepeatMenuItem_Click"/>
                </MenuItem>
            </Menu>
        </Grid>

        <!-- Add this to your Grid layout, after the navigation buttons -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Playlist View -->
            <ListBox x:Name="PlaylistBox"
                     Grid.Column="0"
                     SelectionChanged="PlaylistBox_SelectionChanged"
                     Background="#FF282828"
                     Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}"
                                       Foreground="{Binding IsPlaying}"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="-"
                                       Foreground="#FFB3B3B3"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Artist}"
                                       Foreground="#FFB3B3B3"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Main Content Area -->
            <Grid Grid.Column="1"
                    Margin="10">
                <!-- Songs View -->
                <ListView x:Name="SongListView"
                          Background="Transparent"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid MouseLeftButtonUp="SongListItem_Click">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding AlbumArt}"
                                       Width="40"
                                       Height="40"/>
                                <TextBlock Text="{Binding Title}"
                                           Grid.Column="1"
                                           Foreground="{Binding IsPlaying}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Artist}"
                                           Grid.Column="2"
                                           Foreground="#FFB3B3B3"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Duration}"
                                           Grid.Column="3"
                                           Foreground="#FFB3B3B3"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Song Detail View -->
                <Grid x:Name="SongDetailView"
                      Visibility="Collapsed">
                    <StackPanel>
                        <Button Content="Back to Library"
                                Click="BackToLibrary_Click"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20"/>
                        <Image x:Name="DetailAlbumArtImage"
                               Width="300"
                               Height="300"
                               Margin="0,0,0,20"/>
                        <TextBlock x:Name="DetailTitleText"
                                   FontSize="24"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="DetailArtistText"
                                   FontSize="18"
                                   Foreground="#FFB3B3B3"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="DetailAlbumText"
                                   FontSize="16"
                                   Foreground="#FFB3B3B3"/>
                        <Image x:Name="DetailArtistImage"
                               Width="200"
                               Height="200"
                               Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Albums View -->
                <ListView x:Name="AlbumsView"
                          Visibility="Collapsed"
                          Background="Transparent"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid MouseLeftButtonUp="AlbumItem_Click">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding AlbumArt}"
                                       Width="80"
                                       Height="80"/>
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Album}"
                                               Foreground="White"
                                               FontSize="16"/>
                                    <TextBlock Text="{Binding Artist}"
                                               Foreground="#FFB3B3B3"/>
                                    <TextBlock Text="{Binding SongCount, StringFormat={}{0} songs}"
                                               Foreground="#FFB3B3B3"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Artists View -->
                <ListView x:Name="ArtistsView"
                          Visibility="Collapsed"
                          Background="Transparent"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid MouseLeftButtonUp="ArtistItem_Click">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Artist}"
                                           Foreground="White"
                                           FontSize="16"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding SongCount, StringFormat={}{0} songs}"
                                           Foreground="#FFB3B3B3"
                                           Margin="20,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <!-- Playback Controls -->
        <Grid Grid.Row="2"
              Background="#FF181818"
              Height="90">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Progress Bar -->
            <Grid Grid.Row="0"
                  Margin="10,5">
                <TextBlock x:Name="CurrentTimeText"
                           Text="00:00"
                           Foreground="#FFB3B3B3"
                           HorizontalAlignment="Left"/>

                <Slider x:Name="ProgressSlider"
                        Margin="40,0"
                        Thumb.DragStarted="ProgressSlider_DragStarted"
                        Thumb.DragCompleted="ProgressSlider_DragCompleted"/>

                <TextBlock x:Name="TotalTimeText"
                           Text="00:00"
                           Foreground="#FFB3B3B3"
                           HorizontalAlignment="Right"/>
            </Grid>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10">
                <Button x:Name="PreviousButton"
                        Content="⏮"
                        FontSize="20"
                        Width="40"
                        Height="40"
                        Margin="5"
                        Click="PreviousButton_Click"/>

                <Button x:Name="PlayButton"
                        Content="▶"
                        FontSize="20"
                        Width="40"
                        Height="40"
                        Margin="5"
                        Click="PlayButton_Click"/>

                <Button x:Name="NextButton"
                        Content="⏭"
                        FontSize="20"
                        Width="40"
                        Height="40"
                        Margin="5"
                        Click="NextButton_Click"/>

                <!-- Volume Control -->
                <StackPanel Orientation="Horizontal"
                            Margin="30,0,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="🔊"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <Slider x:Name="VolumeSlider"
                            Width="100"
                            Maximum="1"
                            Value="0.5"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
